<div class="flex items-start justify-center min-h-screen bg-gray-100">
  <div class="md:w-3/6 mt-10 w-full px-3">
    {{!-- STEP 1: SEARCH PODCAST --}}
    {{#unless this.collectionID}}
      <label for="email" class="block text-lg leading-6 text-black font-medium"><span class="text-gray-500 mr-2">Step 1</span><span>Choose Podcast</span></label>
      <div class="relative mt-4 rounded-md">
        <input
          type="email"
          name="search"
          id="search"
          class="block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-sm sm:leading-6"
          placeholder="Enter A Podcast Title..."
          {{on "input" this.onInput}}
        >
      </div>
      {{#if this.query}}
        {{#if this.data}}
          <div class="z-10 mt-1 origin-top-right rounded-md bg-white ring-1 ring-gray-300" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="py-1 px-1" role="none">
              {{#each this.data as |podcast|}}
                <div
                  class="hover:bg-gray-100 hover:cursor-pointer group flex cursor-default select-none rounded-md p-2"
                  id="option-1"
                  tabindex="-1"
                  {{on "click" (fn this.onClick.perform podcast)}}
                >
                  <img
                    class="flex h-12 w-12 flex-none items-center justify-center rounded-md bg-gray-200 border"
                    src={{podcast.artworkUrl600}}
                    alt="podcast result cover"
                  />
                  <div class="ml-2 flex items-center">
                    <div>
                      <p class="text-sm text-gray-600">{{podcast.collectionId}}</p>
                      <p class="text-sm text-gray-600">{{podcast.artistName}}</p>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        {{else}}
          <div class="z-10 mt-1 origin-top-right rounded-md bg-white ring-1 ring-gray-300 shadow" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="py-2 px-1 text-center text-sm text-gray-600 italic" role="none">
              No Results Found
            </div>
          </div>
        {{/if}}
      {{/if}}
    {{/unless}}

    {{!-- STEP 2: SHOW EPISODES --}}
    {{#if this.collectionID}}
      <button
        type="button"
        class="inline-flex items-center gap-x-1.5 rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
        {{on 'click' this.reset}}
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
        Back
      </button>
      <label for="email" class="block mt-4 text-lg leading-6 text-black font-medium"><span class="text-gray-500 mr-2">Step 2</span><span>Choose Episode</span></label>
      <div class="z-10 mt-4 origin-top-right rounded-md bg-white ring-1 ring-gray-300 shadow" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
        <div class="py-1 px-1" role="none">
          {{#each this.episodes as |episode|}}
            <div
              class="hover:bg-gray-100 hover:cursor-pointer group flex cursor-default select-none rounded-md px-2 py-4"
              id="option-1"
              tabindex="-1"
              {{on 'click' (fn this.onClickEpisode episode)}}
            >
              <img
                class="flex h-12 w-12 flex-none items-center justify-center rounded-md bg-gray-200 border"
                src={{episode.artworkUrl600}}
                alt="podcast result cover"
              />
              <div class="ml-2 flex items-center">
                <div>
                  <p class="text-sm text-gray-700 font-medium">{{episode.trackName}}</p>
                  <p class="text-sm text-gray-700 font-medium">{{relative-time episode.trackTimeMillis}}</p>
                  <p class="text-sm text-gray-600 mt-1">{{tail-truncate episode.description}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </div>
</div>

{{!-- STEP 3: PROMPT EMAIL MODAL --}}
{{#if this.promptEmail}}
  <div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
      <div class="flex min-h-full items-center justify-center p-4 text-center sm:items-center sm:p-0">
        <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
              <h3 class="text-lg font-semibold leading-6 text-gray-900" id="modal-title">Enter Your Email</h3>
              <div class="mt-2">
                <p class="text-sm text-gray-500">We'll email you your ad free podcast episode for free</p>
              </div>
              <div class="mt-2">
                <Input
                  @id="email"
                  @value={{this.email}}
                  class="block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 text-sm sm:leading-6"
                />
              </div>
            </div>
          </div>
          <div class="mt-5 sm:mt-4 sm:flex sm:pl-4">
            <button
              type="button"
              class="inline-flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 sm:w-auto"
              {{on 'click' this.submitEmail}}
            >
              Submit
            </button>
            <button
              type="button"
              class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:ml-3 sm:mt-0 sm:w-auto"
              {{on 'click' this.cancelEmail}}
            >
              Cancel
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}


{{!-- STEP 4: PROMPT SUCCESS MODAL --}}
{{#if this.promptSuccess}}
  <div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
      <div class="flex min-h-full items-center justify-center p-4 text-center sm:items-center sm:p-0">
        <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pb-4 pt-5 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg sm:p-6">
          <div class="sm:flex sm:items-start">
            <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
              <h3 class="text-lg font-semibold leading-6 text-gray-900" id="modal-title">Success!</h3>
              <div class="mt-2">
                <p class="text-sm text-gray-500">We've received your request. Expect an email in the next few minutes</p>
              </div>

            </div>
          </div>
          <div class="mt-5 sm:mt-4 sm:flex sm:pl-4">
            <button
              type="button"
              class="inline-flex w-full justify-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 sm:w-auto"
              {{on 'click' this.reset}}
            >
              Sweet!
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}