<div class="h-screen flex flex-col">
  {{!-- Header --}}
  <div class="bg-purple-900 border-b border-purple-800">
    <div class="relative p-4">
      <div class="relative ml-4 w-96">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input
            type="text"
            class="w-full pl-10 pr-4 py-2 rounded-lg bg-purple-500 border border-purple-500 focus:ring-2 focus:ring-purple-500 focus:border-transparent placeholder-white text-purple-900"
            placeholder="Search..."
            value={{this.searchText}}
            {{on "input" this.updateSearchText}}
            {{on "focus" this.focusSearch}}
          >
          {{#if this.searchText}}
            <button 
              class="absolute right-3 top-1/2 transform -translate-y-1/2 text-purple-400 hover:text-purple-600"
              {{on "click" this.clearSearch}}
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          {{/if}}
        </div>
      </div>

      {{#if this.isSearchPopupVisible}}
        <div class="absolute left-[29px] mt-2 w-96 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
          <div class="flex justify-between items-center p-4 border-b border-gray-200">
            <span class="text-base text-gray-700">Search Results</span>
            <button 
              class="text-gray-400 hover:text-gray-600"
              {{on "click" this.clearSearch}}
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
          <div class="p-4 h-[420px] overflow-y-auto">
            {{#if this.search.isLoading}}
              <div class="flex items-center justify-center h-full text-gray-500">
                <svg class="animate-spin h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Searching...
              </div>
            {{else}}
              {{#if this.search.userResults.length}}
                <div class="mb-4">
                  <h3 class="text-base font-semibold text-gray-500 mb-2">Users</h3>
                  <div class="space-y-1">
                    {{#each this.search.userResults as |user|}}
                      <div 
                        class="flex items-center space-x-3 p-2 hover:bg-gray-100 rounded-lg cursor-pointer"
                        {{on "click" (fn this.selectSearchResult user)}}
                      >
                        <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center text-purple-700 text-xs">
                          {{user.avatar}}
                        </div>
                        <span class="text-base text-gray-900">{{user.name}}</span>
                      </div>
                    {{/each}}
                  </div>
                </div>
                
                {{#if this.search.messageResults.length}}
                  <div class="border-b-4 border-gray-200 -mx-4"></div>
                {{/if}}
              {{/if}}

              {{#if this.search.messageResults.length}}
                <div class="mt-4">
                  <h3 class="text-base font-semibold text-gray-500 mb-2">Messages</h3>
                  <div class="space-y-3">
                    {{#each this.search.messageResults as |message|}}
                      <div 
                        class="p-2 hover:bg-gray-100 rounded-lg cursor-pointer"
                        {{on "click" (fn this.selectSearchResult message)}}
                      >
                        <div class="flex items-center space-x-3 mb-1">
                          <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center text-purple-700 text-xs">
                            {{message.user.avatar}}
                          </div>
                          <span class="text-base font-medium text-gray-900">{{message.user.name}}</span>
                          <span class="text-base text-gray-500">{{message.timestamp}}</span>
                        </div>
                        <p class="text-base text-gray-600 ml-11">{{message.content}}</p>
                      </div>
                    {{/each}}
                  </div>
                </div>
              {{/if}}

              {{#unless (or this.search.userResults.length this.search.messageResults.length)}}
                <p class="text-base text-gray-500 text-center">No results found</p>
              {{/unless}}
            {{/if}}
          </div>
        </div>
      {{/if}}
    </div>
  </div>

  {{!-- Main Content --}}
  <div class="flex-1 flex overflow-hidden">
    {{!-- Column 1: Workspace Strip --}}
    <div class="w-16 bg-purple-900 flex flex-col items-center py-4 relative">
      <div class="w-10 h-10 bg-purple-600 rounded-lg flex items-center justify-center text-white font-bold">
        WS
      </div>
      <button 
        class="mt-auto w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center hover:opacity-90"
        {{on "click" (fn (mut this.isProfileOpen) (not this.isProfileOpen))}}
        {{!-- {{on "mousedown" (fn (mut this.isProfileOpen) (not this.isProfileOpen))}} --}}
      >
        {{initials this.pocketbase.currentUser.name}}
      </button>

      <UserProfilePopup 
        @user={{this.pocketbase.currentUser}}
        @isOpen={{this.isProfileOpen}} 
        @onClose={{fn (mut this.isProfileOpen) false}}
        @onLogout={{this.logout}}
      />
    </div>

    {{!-- Column 2: Channels & DMs --}}
    <div class="w-60 bg-purple-800 text-white p-4 overflow-y-auto">
      {{!-- Channels Section --}}
      <div class="mb-6 text-base">
        <h2 class="font-semibold text-purple-200 mb-2">Channels</h2>
        {{#if this.channels}}
          <div class="space-y-1">
            {{#each this.channels as |channel|}}
              <div 
                class="px-2 py-1 rounded cursor-pointer {{if (eq channel.id this.selectedChannelId) 'bg-purple-700' 'hover:bg-purple-700'}}"
                {{on "click" (fn this.selectChannel channel.id)}}
              >
                # {{channel.name}}
              </div>
            {{/each}}
          </div>
          <button 
            class="mt-1 w-full text-left px-2 py-1 rounded cursor-pointer text-white hover:text-white hover:bg-purple-700 transition-colors"
            {{on "click" this.showAddChannelModal}}
          >
            + Add Channel
          </button>
        {{else}}
          <div class="px-2 py-1 text-purple-300">
            <div class="animate-pulse flex space-x-2 items-center">
              <div class="h-2 bg-purple-600 rounded w-24"></div>
            </div>
          </div>
        {{/if}}
      </div>

      {{!-- Direct Messages Section --}}
      <div>
        <h2 class="text-sm font-semibold text-purple-200 mb-2">Direct Messages</h2>
        {{#if this.directMessages}}
          <div class="space-y-1">
            {{#each this.directMessages as |user|}}
              <div 
                class="px-2 py-1 rounded cursor-pointer {{if (eq user.id this.selectedUserId) 'bg-purple-700' 'hover:bg-purple-700'}} flex items-center"
                {{on "click" (fn this.selectUser user.id)}}
              >
                <div class="w-4 h-4 {{if (eq user.onlineStatus 'active') 'bg-green-500' (if (eq user.onlineStatus 'away') 'bg-yellow-500' (if (eq user.onlineStatus 'busy') 'bg-red-500' 'bg-gray-500'))}} rounded-full mr-2"></div>
                {{user.name}}
              </div>
            {{/each}}
          </div>
        {{else}}
          {{!-- <div class="px-2 py-1 text-purple-300">
            <div class="animate-pulse flex space-x-2 items-center">
              <div class="w-4 h-4 bg-purple-600 rounded-full"></div>
              <div class="h-2 bg-purple-600 rounded w-24"></div>
            </div>
          </div> --}}
        {{/if}}
      </div>

      <button 
        class="mt-1 w-full text-left px-2 py-1 rounded cursor-pointer text-white hover:text-white hover:bg-purple-700 transition-colors"
        {{on "click" this.showAddDirectMessageModal}}
      >
        + Add User
      </button>
    </div>

    {{!-- Messages Column --}}
    <div class="flex-1 bg-white flex flex-col">
      <div class="flex-1 overflow-y-auto p-6 messages-container">
        <div class="space-y-5">
          {{#if this.messages}}
            {{#each this.messages as |message|}}
              <div class="flex space-x-4">
                <div class="w-10 h-10 bg-purple-200 rounded-full flex-shrink-0 flex items-center justify-center">
                  {{initials message.expand.user.name}}
                </div>
                <div class="flex-1">
                  <div class="flex items-baseline">
                    <span class="font-bold">{{message.expand.user.name}}</span>
                    <span class="ml-2 text-sm text-gray-400">{{relative-time message.created}}</span>
                  </div>
                  <p class="mt-1">{{message.body}}</p>
                  <div class="mt-1 flex items-center space-x-2">
                    {{!-- <button class="text-gray-400 hover:text-red-500">❤️</button> --}}
                    <button 
                      class="text-sm {{if (eq this.selectedMessage.id message.id) 'text-purple-800 font-medium' 'text-purple-600'}} hover:underline"
                      {{on "click" (fn this.showThread message)}}
                    >
                      {{#if (eq message.replyCount 0)}}
                        Reply
                      {{else}}
                        {{#if (eq message.replyCount 1)}}
                          1 Reply
                        {{else}}
                          {{message.replyCount}} replies
                        {{/if}}
                      {{/if}}
                    </button>
                  </div>
                </div>
              </div>
            {{/each}}
          {{else}}
            <div class="italic text-gray-500">This is the start of your message history</div>
            {{!-- no loading indicator --}}
            {{!-- <div class="space-y-4">
              {{#each (array 1 2 3) as |placeholder|}}
                <div class="animate-pulse flex space-x-4">
                  <div class="w-10 h-10 bg-gray-200 rounded-full"></div>
                  <div class="flex-1 space-y-2">
                    <div class="h-2 bg-gray-200 rounded w-1/4"></div>
                    <div class="h-2 bg-gray-200 rounded w-3/4"></div>
                  </div>
                </div>
              {{/each}}
            </div> --}}
          {{/if}}
        </div>
      </div>

      {{!-- Message Input Section --}}
      <div class="border-t border-gray-200 p-4 bg-white">
        <div class="mb-3">
          <textarea 
            class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none"
            rows="3"
            placeholder="Type your message here..."
            value={{this.messageText}}
            {{on "input" this.updateMessageText}}
          ></textarea>
        </div>
        
        <div class="flex items-center justify-between">
          <div class="flex space-x-2">
            {{!-- Upload Button --}}
            <button 
              class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
              title="Upload files"
              onclick="document.getElementById('file-upload').click()"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
              </svg>
            </button>

            {{!-- Add Emoji Button --}}
            <button 
              class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
              title="Add emoji"
              {{on "click" (fn (mut this.isMessageEmojiPickerVisible) (not this.isMessageEmojiPickerVisible))}}
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </button>
          </div>

          {{!-- Post Button --}}
          <button 
            class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed"
            disabled={{not this.messageText}}
            {{on "click" this.postMessage}}
          >
            Post
          </button>
        </div>

        {{#if this.isMessageEmojiPickerVisible}}
          <EmojiPicker 
            @onSelect={{this.addEmojiToMessage}}
            @onClose={{fn (mut this.isMessageEmojiPickerVisible) false}}
          />
        {{/if}}
      </div>
    </div>

    {{!-- Thread Column --}}
    {{#if this.isThreadVisible}}
      <div class="hidden md:block w-96 border-l-4 border-gray-200 bg-gray-50">
        <div class="h-full flex flex-col">
          <div class="px-4 py-5 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-base font-bold">Thread</h3>
            <button 
              class="text-gray-400 hover:text-gray-600"
              {{on "click" this.closeThread}}
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          {{#if this.selectedMessage}}
            <div class="flex-1 overflow-y-auto">
              <div class="p-5">
                <div class="flex space-x-4">
                  <div class="w-10 h-10 bg-purple-200 rounded-full flex-shrink-0 flex items-center justify-center text-base">
                    {{initials this.selectedMessage.expand.user.name}}
                  </div>
                  <div class="flex-1">
                    <div class="flex items-baseline">
                      <span class="font-bold text-base">{{this.selectedMessage.expand.user.name}}</span>
                      <span class="ml-2 text-base text-gray-400">{{relative-time this.selectedMessage.updated}}</span>
                    </div>
                    <p class="mt-1 text-base">{{this.selectedMessage.body}}</p>
                  </div>
                </div>
              </div>
              
              <div class="border-b-4 border-gray-200"></div>
              
              <div class="p-4">
                {{#if this.isLoadingReplies}}
                  <div class="space-y-4">
                    {{#each (array 1 2 3) as |placeholder|}}
                      <div class="animate-pulse flex space-x-4">
                        <div class="w-8 h-8 bg-gray-200 rounded-full"></div>
                        <div class="flex-1 space-y-2">
                          <div class="h-2 bg-gray-200 rounded w-1/4"></div>
                          <div class="h-2 bg-gray-200 rounded w-1/2"></div>
                        </div>
                      </div>
                    {{/each}}
                  </div>
                {{else}}
                  <div class="space-y-4">
                    {{#each this.replies as |reply|}}
                      <div class="flex space-x-4">
                        <div class="w-8 h-8 bg-purple-200 rounded-full flex-shrink-0 flex items-center justify-center text-base">
                          {{initials reply.expand.user.name}}
                        </div>
                        <div class="flex-1">
                          <div class="flex items-baseline">
                            <span class="font-bold text-base">{{reply.expand.user.name}}</span>
                            <span class="ml-2 text-base text-gray-400">{{relative-time reply.created}}</span>
                          </div>
                          <p class="mt-1 text-base">{{reply.body}}</p>
                        </div>
                      </div>
                    {{/each}}
                  </div>
                {{/if}}
              </div>

              <div class="border-t-4 border-gray-200"></div>

              <div class="p-4">
                <textarea 
                  class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none text-base"
                  rows="2"
                  placeholder="Reply to thread..."
                  value={{this.replyText}}
                  {{on "input" this.updateReplyText}}
                ></textarea>
                
                <div class="flex justify-between mt-2">
                  <div class="relative">
                    {{!-- <button 
                      class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                      title="Add emoji"
                      {{on "click" (fn (mut this.isEmojiPickerVisible) (not this.isEmojiPickerVisible))}}
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </button> --}}

                    {{!-- {{#if this.isEmojiPickerVisible}}
                      <EmojiPicker 
                        @onSelect={{this.addEmojiToReply}}
                        @onClose={{fn (mut this.isEmojiPickerVisible) false}}
                      />
                    {{/if}} --}}
                  </div>

                  <button 
                    class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed text-base"
                    disabled={{not this.replyText}}
                    {{on "click" this.postReply}}
                  >
                    Reply
                  </button>
                </div>
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    {{/if}}
  </div>
</div>

<input 
  type="file"
  id="file-upload"
  class="hidden"
  {{on "change" this.handleFileUpload}}
>

{{#if this.selectedSearchResult}}
  <div class="absolute top-[72px] left-[72px] right-0 bottom-0 bg-white z-50">
    <div class="h-full relative">
      {{!-- Header --}}
      <div class="flex justify-between items-center p-6 border-b border-gray-200">
        <h2 class="text-base font-semibold text-gray-900">
          {{if (eq this.selectedSearchResult.content undefined) "User Details" "Message Details"}}
        </h2>
        <button 
          class="text-gray-400 hover:text-gray-600 p-2"
          {{on "click" this.closeFullScreenPopup}}
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      {{!-- Content --}}
      <div class="flex h-[calc(100%-73px)]">
        {{!-- Left Column (25%) --}}
        <div class="w-1/4 p-6 border-r-4 border-gray-200">
          {{#if (eq this.selectedSearchResult.content undefined)}}
            {{!-- User Result --}}
            <div class="flex items-center space-x-3 p-2 bg-gray-100 rounded-lg cursor-pointer">
              <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center text-purple-700 text-xs">
                {{this.selectedSearchResult.avatar}}
              </div>
              <span class="text-base text-gray-900">{{this.selectedSearchResult.name}}</span>
            </div>
          {{else}}
            {{!-- Message Result --}}
            <div class="p-2 bg-gray-100 rounded-lg cursor-pointer">
              <div class="flex items-center space-x-3 mb-1">
                <div class="w-8 h-8 bg-purple-200 rounded-full flex items-center justify-center text-purple-700 text-xs">
                  {{this.selectedSearchResult.user.avatar}}
                </div>
                <span class="text-base font-medium text-gray-900">{{this.selectedSearchResult.user.name}}</span>
              </div>
              <div class="ml-11">
                <span class="text-base text-gray-500">{{this.selectedSearchResult.timestamp}}</span>
                <p class="text-base text-gray-900 mt-2">{{this.selectedSearchResult.content}}</p>
              </div>
            </div>
          {{/if}}
        </div>

        {{!-- Right Column (75%) --}}
        <div class="flex-1 p-6">
          <p class="text-base text-gray-500">Search results for detailed view goes here...</p>
        </div>
      </div>
    </div>
  </div>
{{/if}}

{{#if this.isAddChannelModalVisible}}
  <div class="fixed inset-0 bg-black/50 flex justify-center items-center z-50">
    <div class="bg-white rounded-lg p-7 w-[560px] max-w-[90%] font-inter">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-base font-bold text-black">Add Channel</h2>
        <button 
          class="text-gray-500 hover:text-gray-700 text-xl"
          {{on "click" this.hideAddChannelModal}}
        >
          ✕
        </button>
      </div>

      <div class="space-y-6">
        <div class="flex flex-col">
          <label class="mb-2 text-black text-base">Channel Name</label>
          <input 
            type="text" 
            class="w-full px-3 py-3 border border-gray-200 rounded-lg focus:outline-none focus:border-purple-500/50 focus:ring-1 focus:ring-purple-500/50 text-base"
            {{on "input" this.updateChannelName}}
            value={{this.newChannelName}}
          >
        </div>

        <div class="flex flex-col">
          <label class="mb-2 text-black text-base">Select Users</label>
          <select 
            multiple 
            class="w-full px-3 py-3 border border-gray-200 rounded-lg focus:outline-none focus:border-purple-500/50 focus:ring-1 focus:ring-purple-500/50 text-sm [&>option:checked]:bg-purple-500 [&>option:checked]:text-white [&>option]:cursor-pointer"
            {{on "change" this.updateSelectedUsers}}
          >
            {{#each this.users as |user|}}
              {{#if (not-eq user.id this.pocketbase.currentUser.id)}}
                <option class="hover:bg-purple-100 p-2 text-base" user-id={{user.id}}>{{user.name}}</option>
              {{/if}}
            {{/each}}
          </select>
        </div>

        <button 
          class="w-full py-3 bg-purple-500 text-white rounded-lg hover:bg-purple-700 transition-colors disabled:bg-purple-200 disabled:cursor-not-allowed text-base"
          {{on "click" this.createChannel}}
          disabled={{not this.isValidChannel}}
        >
          Create Channel
        </button>
      </div>
    </div>
  </div>
{{/if}}

{{#if this.isAddDirectMessageModalVisible}}
  <div class="fixed inset-0 bg-black/50 flex justify-center items-center z-50">
    <div class="bg-white rounded-lg p-7 w-[560px] max-w-[90%] font-inter">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-base font-bold text-black">Direct Message</h2>
        <button 
          class="text-gray-500 hover:text-gray-700 text-xl"
          {{on "click" this.hideAddDirectMessageModal}}
        >
          ✕
        </button>
      </div>

      <div class="space-y-6">
        <div class="flex flex-col">
          <label class="mb-2 text-black text-base">Select Users</label>
          <select 
            multiple 
            class="w-full px-3 py-3 border border-gray-200 rounded-lg focus:outline-none focus:border-purple-500/50 focus:ring-1 focus:ring-purple-500/50 text-sm [&>option:checked]:bg-purple-500 [&>option:checked]:text-white [&>option]:cursor-pointer"
            {{on "change" this.updateSelectedDMUsers}}
          >
            {{#each this.users as |user|}}
              {{#if (not-eq user.id this.pocketbase.currentUser.id)}}
                <option 
                  value={{user.id}}
                  class="hover:bg-purple-100 p-2 text-base"
                >
                  {{user.name}}
                </option>
              {{/if}}
            {{/each}}
          </select>
        </div>

        <button 
          class="w-full py-3 bg-purple-500 text-white rounded-lg hover:bg-purple-700 transition-colors disabled:bg-purple-200 disabled:cursor-not-allowed text-base"
          {{on "click" this.createDirectMessage}}
          disabled={{not this.isValidDirectMessage}}
        >
          Send Message
        </button>
      </div>
    </div>
  </div>
{{/if}}