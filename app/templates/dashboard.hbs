          <div class="flex justify-end">
            <button 
              class="px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 disabled:opacity-50 disabled:cursor-not-allowed"
              disabled={{or this.isAILoading (not this.aiMessageText)}}
              {{on "click" this.sendAIMessage}}
            >
              {{if this.isAILoading "Thinking..." "Post"}}
            </button>
          </div>
        </div>
      </div>
