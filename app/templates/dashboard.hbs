        <div class="border-t border-gray-200 p-4 bg-white">
          <div class="mb-3">
            <textarea 
              class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none disabled:bg-gray-50 disabled:text-gray-500"
              rows="3"
              placeholder="Message Agent Devin..."
              value={{this.aiMessageText}}
              disabled={{this.isAILoading}}
              {{on "input" this.updateAIMessageText}}
